<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3fa"
    tools:context=".ConsultarTodo">

    <LinearLayout
        android:id="@+id/LLEncabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRegresarConsultar"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                app:srcCompat="@mipmap/icono_regresarazul" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="45dp"
                app:srcCompat="@drawable/pulperia_maritza_claro" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="top" />

        <SearchView
            android:id="@+id/svBuscarTodo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/casilla_blanca_buscador"
            android:elevation="5dp"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:iconifiedByDefault="false"
            android:queryBackground="@drawable/casilla_blanca_buscador"
            android:queryHint="Buscar..."
            app:theme="@style/SearchViewStyle">

        </SearchView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="145dp"
        android:contentDescription="@string/descripcion"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LLEncabezado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblCategorias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Categorías"
                        android:textColor="#14213D"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/lblVerTodasCategorias"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center|end"
                        android:onClick="verCategorias"
                        android:text="Ver Todas"
                        android:textColor="#4263AC"
                        android:textSize="17dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/casilla_blanca_buscador"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgRefrescosConsultar"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="6dp"
                                app:srcCompat="@mipmap/cat_refrescos" />

                            <TextView
                                android:id="@+id/lblRefrescosConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Refrescos"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/casilla_blanca_buscador"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgPanesConsultar"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="6dp"
                                app:srcCompat="@mipmap/cat_panes" />

                            <TextView
                                android:id="@+id/lblPanesConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Panes"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/casilla_blanca_buscador"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgCarnesConsultar"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="6dp"
                                app:srcCompat="@mipmap/cat_carnes" />

                            <TextView
                                android:id="@+id/lblCarnesConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Carnes"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/casilla_blanca_buscador"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgVerdurasConsultar"
                                android:layout_width="50dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="6dp"
                                app:srcCompat="@mipmap/cat_verduras" />

                            <TextView
                                android:id="@+id/lblVerdurasConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Verduras"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblProductos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Productos"
                        android:textColor="#14213D"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/lblVerTodosProductos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center|end"
                        android:onClick="verProductos"
                        android:text="Ver Todos"
                        android:textColor="#4263AC"
                        android:textSize="17dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgMountainDewConsultar"
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@mipmap/ref_mountaindew_lata" />

                            <TextView
                                android:id="@+id/lblMountainDewConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Mountain Dew"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCantidadMountainDewConsultar"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/casilla_amarilla"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="1 U"
                                    android:textColor="#14213D"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/lblPrecioMountainDewConsultar"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center|right"
                                    android:text="L.17.00"
                                    android:textColor="#14213D"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgLtLecheLeydeConsultar"
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@mipmap/lac_litroleche_leyde" />

                            <TextView
                                android:id="@+id/lblLtLecheLeydeConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Litro de Leche"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCantidadLtLecheLeydeConsultar"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/casilla_amarilla"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="1 Lt"
                                    android:textColor="#14213D"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/lblPrecioLtLecheLeydeConsultar"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center|right"
                                    android:text="L.31.00"
                                    android:textColor="#14213D"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgZibasAmarillaConsultar"
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@mipmap/chu_zibasamarilla" />

                            <TextView
                                android:id="@+id/lblZibasAmarillaConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Zibas Clásicas"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCantidadZibasAmarillaConsultar"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/casilla_amarilla"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="1 U"
                                    android:textColor="#14213D"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/lblPrecioZibasAmarillaConsultar"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center|right"
                                    android:text="L.8.00"
                                    android:textColor="#14213D"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgJabonVenzaConsultar"
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                app:srcCompat="@mipmap/hig_jabon_venza" />

                            <TextView
                                android:id="@+id/lblJabonVenzaConsultar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Jabón Venza"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lblCantidadJabonVenzaConsultar"
                                    android:layout_width="45dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:background="@drawable/casilla_amarilla"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:text="1 U"
                                    android:textColor="#14213D"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/lblPrecioJabonVenzaConsultar"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="7dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center|right"
                                    android:text="L.23.00"
                                    android:textColor="#14213D"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblProveedores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Proveedores"
                        android:textColor="#14213D"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/lblVerTodosProveedores"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center|end"
                        android:onClick="verProveedores"
                        android:paddingTop="4dp"
                        android:text="Ver Todos"
                        android:textColor="#4263AC"
                        android:textSize="17dp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgLeyde"
                                android:layout_width="110dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:srcCompat="@mipmap/logo_leyde" />

                            <TextView
                                android:id="@+id/lblLeyde"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Leyde"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgBimbo"
                                android:layout_width="110dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:srcCompat="@mipmap/logo_bimbo" />

                            <TextView
                                android:id="@+id/lblBimbo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Bimbo"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgPolloRey"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:srcCompat="@mipmap/logo_pollorey" />

                            <TextView
                                android:id="@+id/lblPolloRey"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Pollo Rey"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/casilla_blanca"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgPepsi"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                app:srcCompat="@mipmap/logo_pepsi" />

                            <TextView
                                android:id="@+id/lblPepsi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Pepsi"
                                android:textAlignment="center"
                                android:textColor="#14213D"
                                android:textSize="20dp" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#FFFFFF"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="20dp"
            app:fabCradleVerticalOffset="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="14dp">

                <LinearLayout
                    android:id="@+id/inicioBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icono_inicioazul" />

                    <TextView
                        android:id="@+id/lblInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Inicio"
                        android:textAlignment="center"
                        android:textColor="#14213D"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/invisibleBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/btnInvisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/icono_carrito" />

                    <TextView
                        android:id="@+id/lblInvisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Carrito"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/historialBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:onClick="historial"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnHistorial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/icono_historialazul" />

                    <TextView
                        android:id="@+id/lblHistorial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Historial"
                        android:textAlignment="center"
                        android:textColor="#14213D"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#14213D"
            android:contentDescription="@string/descripcion"
            android:elevation="3dp"
            android:onClick="carritoVenta"
            android:src="@mipmap/icono_carrito"
            app:backgroundTint="#FFFFFF"
            app:layout_anchor="@id/app_bar"
            app:maxImageSize="25dp"
            app:tint="#FFFFFF">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>