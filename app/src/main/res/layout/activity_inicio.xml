<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3fa"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgLogoPulperiaInicio"
            android:layout_width="230dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/pulperia_maritza_claro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTodoLoQueBuscas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="¡Todo lo que buscas"
                android:textAlignment="center"
                android:textColor="#14213D"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/lblEstaAqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="está aquí!"
                android:textAlignment="center"
                android:textColor="#d78a04"
                android:textSize="22dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgAbarrotesIcono"
            android:layout_width="320dp"
            android:layout_height="360dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@mipmap/icono_abarrotes" />

        <TextView
            android:id="@+id/btnIniciarSesionInicio"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/casilla_azul_separador"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:onClick="iniciarSesion"
            android:text="Iniciar Sesión"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/btnRegistrarseInicio"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/casilla_azul_separador"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:onClick="registrarse"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>