<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f3fa"
    tools:context=".EditarPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/descripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLEncabezado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgRegresarEditPerfil"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        app:srcCompat="@mipmap/icono_regresarazul" />

                    <TextView
                        android:id="@+id/lblEditarPerfilTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="Editar Perfil"
                        android:textAlignment="center"
                        android:textColor="#14213D"
                        android:textSize="25dp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="top" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@mipmap/icono_nombreazul" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casilla_blanca_buscador"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgNombreRegistrarse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/icono_nombreazul" />

                <EditText
                    android:id="@+id/txtNombreRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Nombre y Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casilla_blanca_buscador"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgTelefonoRegistrarse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/icono_telefonoazul" />

                <EditText
                    android:id="@+id/txtTelefonoRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Teléfono"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casilla_blanca_buscador"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgCorreoRegistrarse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/icono_emailazul" />

                <EditText
                    android:id="@+id/txtCorreoRegistrarse"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:hint="Correo Electrónico"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casilla_blanca_buscador"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgContraRegistrarse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/icono_passwordazul" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtContraRegistrarse"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_bold"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textSize="17dp" />

                    <ImageView
                        android:id="@+id/imgVerContraRegistrarse"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        app:srcCompat="@mipmap/icono_showcontraazul" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/casilla_blanca_buscador"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/imgConfContraRegistrarse"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@mipmap/icono_passwordazul" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtConfContraRegistrarse"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:fontFamily="@font/montserrat_bold"
                        android:hint="Confirmar Contraseña"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textSize="17dp" />

                    <ImageView
                        android:id="@+id/imgVerConfContraRegistrarse"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        app:srcCompat="@mipmap/icono_showcontraazul" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/btnGuardarPerfil"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/casilla_azul_separador"
                android:elevation="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Guardar Cambios"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>